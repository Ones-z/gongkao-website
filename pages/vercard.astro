---
import "@/styles/global.css";
import Version from "@/components/ui/Version";

let latestVer: string | null;
let publishedDate: string | null;
let loading: boolean = true;

try {
  const response = await fetch('https://ghfile.geekertao.top/https://api.github.com/repos/Class-Widgets/Class-Widgets/releases/latest');
  if (!response.ok) {
    throw new Error(`HTTP error! status: ${response.status}`);
  }
  const data = await response.json();
  latestVer = data.tag_name;
  const date = new Date(data.published_at);
  publishedDate = date.toLocaleDateString('zh-CN');
} catch (error) {
  console.error("Failed to fetch latest release:", error);
  latestVer = 'v1.1.7.1'; // Fallback version
  publishedDate = null;
} finally {
  loading = false;
}
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Class Widgets</title>
    <style>
      html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden; /* 防止滚动条出现 */
      }
    </style>
  </head>
  <body>
    <Version latestVer={latestVer} publishedDate={publishedDate} loading={loading} size="auto" />
  </body>
</html>