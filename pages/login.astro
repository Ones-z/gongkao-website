---
import Layout from "../layouts/Layout.astro";
import LoginPage from "../components/Login";
import { getTranslator, getTranslations } from "@gudupao/astro-i18n";

const lang = Astro.params.lang || "zh";
const t = getTranslator(lang);
---

<Layout transition:animate="slide" title={t("download.page_title")}>
  <br />
  <LoginPage client:load translations={getTranslations(lang)} />
</Layout>
